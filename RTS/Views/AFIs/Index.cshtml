@model IEnumerable<RTS.Models.AFI>

@{
    ViewBag.Title = "Index";
}

<div class="card">
    <h2 class="card-header">AFIs</h2>
    <div class="card-body">

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table" id="AFIsTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ticket)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.phone)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.longitude)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.latitude)
                        </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.Ward.ward_desc)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ticket)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.phone)
                        </td>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.longitude)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.latitude)
                            </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Ward.ward_desc)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
        @section Scripts {
            <script>
                $("document").ready(function () {
                    $("#AFIsTable").DataTable();
                });

            </script>
        }
